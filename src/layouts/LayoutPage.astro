---
import Head from '@components/layout/Head.astro';
import Hero from '@components/HeroPage.astro';
import Header from '@components/layout/Header.astro';
import Footer from '@components/layout/Footer.astro';
import '../styles/global.css';

const { title = 'Portfolio' } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <Head title={title} />
  <body
    class="h-screen w-screen flex flex-col items-center justify-between bg-white text-black overflow-x-hidden dark:bg-black-rich dark:text-white">
    <Header />
    <main class="w-full max-w-screen-md mb-5 px-3 flex flex-col items-start gap-5">
      <Hero />
      <h1 class="text-2xl text-green-orange font-bold">{title}</h1>
      <slot />
    </main>
    <Footer />
  </body>
</html>
