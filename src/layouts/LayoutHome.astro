---
import Hero from '@components/HeroHome.astro';
import Head from '@components/layout/Head.astro';
import Header from '@components/layout/Header.astro';
import Footer from '@components/layout/Footer.astro';
import { fade } from 'astro:transitions';
import '../styles/global.css';

const { title = 'Giovanni Callegari portfolio' } = Astro.props;
---

<!DOCTYPE html>
<html lang="en" transition:animate={fade({ duration: '0.2s' })}>
  <Head title={title} />
  <body
    class="h-screen w-screen flex flex-col items-center justify-between bg-white text-black overflow-x-hidden dark:bg-black-rich dark:text-white">
    <Header />
    <main
      class="w-full max-w-screen-md px-3 grid place-items-center grid-cols-2 sm:grid-cols-3 gap-10">
      <Hero />
      <slot />
    </main>
    <Footer />
  </body>
</html>
