---
import { getCollection } from 'astro:content';
import Layout from '@layouts/LayoutPage.astro';

const projects = await getCollection('projects');
---

<Layout title="Projects">
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
    {
      projects.map(({ slug, data: project }) => (
        <a href={`/projects/${slug}`} title={project.title}>
          <div class="p-4 bg-pink rounded shadow shadow-slate-600 text-white">
            <h2 class="text-xl font-bold">{project.title}</h2>
            <p class="line-clamp-3">{project.description}</p>
          </div>
        </a>
      ))
    }
  </div>
</Layout>
