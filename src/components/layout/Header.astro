---
import MobileNav from '@components/Navbar/MobileNav.astro';
import Navlinks from '@components/Navbar/Navlinks.astro';
import { ThemeToggle } from '@components/Navbar/ThemeToggle';
---

<header
  class="w-full fixed top-0 p-3 mb-2 z-10 backdrop-blur-sm shadow-sm dark:shadow-pink/30 bg-white/70 dark:bg-black-rich/70">
  <div class="max-w-screen-md mx-3 sm:mx-auto flex flex-row items-center justify-between gap-4">
    <MobileNav />
    <h2 class="hover:underline hover:underline-offset-4 text-4xl font-bold text-green-orange">
      <a href="/">Gc</a>
    </h2>
    <nav class="hidden sm:block">
      <Navlinks />
    </nav>
    <ThemeToggle client:visible />
  </div>
</header>
